<%- include("templates/header") %>
<%- include("styles/admin_style") %>
<%- include("templates/header_closer") %>

    <h1> Welcome Admin <%= name %> </h1>

    <table>
        <tr>
            <th> Username </th>
            <th> Role </th>
            <th> Actions </th>
        </tr>
        <% users.forEach(function(user) { %>
            <tr>
                <td> <%= user.username %> </td>
                <td> <%= user.role %> </td>
                <td class="table_actions"> 
                    <form action="updateUser" method="POST">
                        <input type="hidden" name="userId" value="<%= user._id %>">
                        <input type="submit" name="action" value="Demote" id="demote">
                    </form>
                    <form action="updateUser" method="POST">
                        <input type="hidden" name="userId" value="<%= user._id %>">
                        <input type="submit" name="action" value="Promote" id="promote">
                    </form> 
                </td>
            </tr>
        <% }); %>
    </table>

<%- include("templates/footer") %>